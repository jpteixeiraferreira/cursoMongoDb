<%# Mensagens de erro ou sucesso para serem exibidas nas views %>

<% if (errors.length > 0){ %>

<div class="row">
  <div class="col mt-3">
    <div class="alert alert-danger">
      <ul>
        <% errors.forEach(function(error){ %>
        <li><%= error %></li>
        <% }) %>
      </ul>
    </div>
  </div>
</div>

<% } %>
<% if (success.length > 0){ %>

<div class="row">
  <div class="col mt-3">
    <div class="alert alert-success">
      <ul>
        <% success.forEach(function(success){ %>
        <li><%= success %></li>
        <% }) %>
      </ul>
    </div>
  </div>
</div>

<% } %>
